<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/image_dialog_step"
        android:layout_width="318dp"
        android:layout_height="64dp"
        android:background="#e83425"
        android:contentDescription="@string/add_step"
        android:scaleType="fitCenter"
        android:src="@drawable/logo" />

    <EditText
        android:id="@+id/new_step_description"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/image_dialog_step"
        android:ems="10"
        android:hint="@string/descricao_step"
        android:inputType="textAutoComplete|textMultiLine" />

    <EditText
        android:id="@+id/new_step_time"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/text_duracao"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/text_duracao"
        android:ems="10"
        android:inputType="time" />

    <TextView
        android:id="@+id/text_minutes"
        android:layout_width="76dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/new_step_time"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/new_step_time"
        android:text="minutos"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/text_duracao"
        android:layout_width="76dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/new_step_description"
        android:layout_marginTop="16dp"
        android:text="Duração"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
</RelativeLayout>